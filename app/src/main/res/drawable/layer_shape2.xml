<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp"/>
            <gradient
                android:angle="270"
                android:centerColor="#3370A800"
                android:endColor="#336DBCDB"
                android:startColor="#33FF530D"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="10dp"/>
                <gradient
                    android:angle="270"
                    android:centerColor="#8870A800"
                    android:endColor="#886DBCDB"
                    android:startColor="#88FF530D"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp"/>
                <gradient
                    android:angle="270"
                    android:centerColor="#70A800"
                    android:endColor="#6DBCDB"
                    android:startColor="#FF530D"/>
            </shape>
        </clip>
    </item>

</layer-list>